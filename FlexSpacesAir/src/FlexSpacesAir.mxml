<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication title="FlexSpaces+Air"
        verticalScrollPolicy="off"
        layout="absolute" 
        width="1100"
        height="700"
        frameRate="99"
        backgroundColor="#000000"
        paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" 
        verticalAlign="middle" horizontalAlign="center"                
        styleName="mainApplication" 
        xmlns:mx="http://www.adobe.com/2006/mxml"
        xmlns:business="org.integratedsemantics.flexspaces.control.delegate.*"
        xmlns:control="org.integratedsemantics.flexspacesair.control.*"
        xmlns:view="org.integratedsemantics.flexspaces.view.*"
        creationComplete="onCreationComplete(event)">
        
    <mx:Script>
        <![CDATA[
        
        import org.integratedsemantics.flexspacesair.view.FlexSpacesAirPresenter;       
        
        protected function onCreationComplete(event:Event):void
        {
            var presenter:FlexSpacesAirPresenter = new FlexSpacesAirPresenter(flexSpacesView);
        }
        
        ]]>
    </mx:Script>                              

    <mx:Style source="flexspacesair.css"/>
            
    <business:Services id="services" />

    <control:AirAppController id="appController" />

    <view:FlexSpacesView id="flexSpacesView" width="100%" height="100%"/>
                 
</mx:WindowedApplication>

