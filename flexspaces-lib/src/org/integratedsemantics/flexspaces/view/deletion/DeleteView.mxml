<?xml version="1.0" encoding="utf-8"?>
<deletion:DeleteViewBase 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:deletion="org.integratedsemantics.flexspaces.view.deletion.*"
    width="514" height="292" title="{resourceManager.getString('DeleteView', 'title')}" styleName="dialog">
    
    <fx:Metadata>[ResourceBundle("DeleteView")]</fx:Metadata>
    
    <!--fx:Style source="../../framework/presmodel/dialog.css"/-->

    <s:VGroup horizontalAlign="left" verticalAlign="top" width="100%" height="100%" styleName="mainArea"
              paddingLeft="20" paddingTop="20" paddingRight="20" paddingBottom="20">
    
    <s:VGroup height="160" width="470" styleName="mainArea">
        <s:Label text="{resourceManager.getString('DeleteView', 'confirmMessage_text')}" width="450" height="40" id="confirmMessage"/>    
        <mx:Spacer height="15"/>
        <s:Label id="filelist" width="450" height="77" text="{resourceManager.getString('DeleteView', 'filelist_text')}"/>    
    </s:VGroup>
    
    <mx:Spacer height="15"/>

    <s:HGroup width="100%" styleName="buttonArea" horizontalAlign="center" verticalAlign="bottom"> 
        <s:Button id="okBtn" label="{resourceManager.getString('DeleteView', 'okBtn_label' )}"/>    
        <mx:Spacer width="20"/>
        <s:Button id="cancelBtn" label="{resourceManager.getString('DeleteView', 'cancelBtn_label' )}"/>    
    </s:HGroup> 

    </s:VGroup>
    
</deletion:DeleteViewBase>
