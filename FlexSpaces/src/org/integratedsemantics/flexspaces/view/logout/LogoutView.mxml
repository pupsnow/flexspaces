<logout:LogoutViewBase xmlns:mx="http://www.adobe.com/2006/mxml" 
    xmlns:logout="org.integratedsemantics.flexspaces.view.logout.*"
    creationComplete="onCreationComplete(event)" height="100%" styleName="logout" >	
	
    <mx:Metadata>[ResourceBundle("LogoutView")]</mx:Metadata>
  
    <mx:Style source="logout.css"/> 

    <mx:HBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">

        <mx:Spacer width="5"/>
            
        <mx:LinkButton id="logoutBtn" label="{resourceManager.getString('LogoutView', 'logoutBtn_label' )}" styleName="logoutLink"/>
  
	</mx:HBox>	
	
</logout:LogoutViewBase>
				            