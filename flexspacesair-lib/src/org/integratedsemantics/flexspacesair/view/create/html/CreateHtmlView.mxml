<?xml version="1.0" encoding="utf-8"?>
<createhtml:CreateHtmlViewBase 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:createhtml="org.integratedsemantics.flexspacesair.view.create.html.*"
    skinClass="flex.utils.spark.resize.ResizableDraggableTitleWindowSkin"
    width="750" height="600" minWidth="400" minHeight="400"
    title="Create Content - HTML" styleName="dialog">

    <!--fx:Style source="../create.css"/-->

    <s:VGroup horizontalAlign="left" verticalAlign="top" width="100%" height="100%" styleName="mainArea"
              paddingLeft="20" paddingTop="20" paddingRight="20" paddingBottom="20">
       
    <mx:Form styleName="mainArea">
        <mx:FormItem label="Name:"  width="100%"  styleName="mainArea">
            <s:TextInput id="nodename" width="250" text="New HTML Doc.html" styleName="input"/>
        </mx:FormItem>
    </mx:Form>
    
    <mx:HTML id="htmlControl" width="100%" height="90%" styleName="input"/>
    
    <mx:Spacer height="20"/>
                  
    <s:HGroup width="100%" styleName="buttonArea" horizontalAlign="center" verticalAlign="bottom"> 
        <s:Button id="okBtn" label="OK"/> 
        <mx:Spacer width="20"/>
        <s:Button id="cancelBtn" label="Cancel"/>
    </s:HGroup> 
        
    </s:VGroup>

</createhtml:CreateHtmlViewBase>
